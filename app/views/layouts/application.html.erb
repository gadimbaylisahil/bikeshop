<!DOCTYPE html>
<html>
<head>
<title>Bikeshop</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
  <link href="http://fonts.googleapis.com/css?family=Cookie" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Karla' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Playfair+Display' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Snippet' rel='stylesheet' type='text/css'>

  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <%= javascript_include_tag 'custom', 'data-turbolinks-track' => true %>
  
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="keywords" content="footer, address, phone, icons" />
  <%= csrf_meta_tags %>

</head>

<body>

	<!-- Alerts and Notifications -->
	<% if notice %>

		<div class="alert alert-success alert-dismissible fade in" role="alert" style="margin: 0; padding: 10;">
  			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
 			<%=notice%>
		</div>

	<% end %>

	<% if alert %>
		
		<div class="alert alert-warning alert-dismissible fade in" role="alert" style="margin: 0; padding: 10;">
  			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
 			<strong>Warning!</strong> <%=alert%>
		</div>
		
	<% end %>

	<!-- NAVIGATION -->
	<nav class="navbar navbar-transparent navbar-custom navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#target-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/static_pages/index">Bike Shop</a>
			</div> <!-- navbar header -->
			
			<!-- navigation links -->
			<div class="collapse navbar-collapse" id="target-collapse">

				<!-- navigation main links -->
				<ul class="nav navbar-nav navbar-right">
					<li> <%= link_to 'Home', '/static_pages/index', :class => 'page-scroll' %> </li>
					<li> <%= link_to 'Shop', '/static_pages/shop', :class => 'page-scroll' %></li>
					<li> <%= link_to 'Orders', '/static_pages/orders', :class => 'page-scroll' %></li>
					<li> <%= link_to 'Contact', '/static_pages/contact', :class => 'page-scroll' %></li>
					<li > 
					<%= form_tag("/products", method: "get" ) do %>
						<%= text_field_tag :q, "", class: 'search_text' %>
						<%= submit_tag("Search", :class => "search_button") %>
					<% end %>
					</li>
					<!-- Login and Logout button -->
					<li>
						<% if user_signed_in? %>
							<%= link_to('Logout', destroy_user_session_path, :class => 'log_out', :style => "color: red;") %>
						<% else %>
							<%= link_to('Login', new_user_session_path, :class => 'log_in', :style => "color: green;") %>
						<% end %>
					</li>
				</ul> 
			</div><!-- navlinks  -->
		</div><!-- nav container -->
	</nav><!-- navigation ENDS -->

<%= yield %>

	<!-- Footer -->
	<footer class="footer-distributed">

		<div class="footer-right">
			<a href="#"><i class="fa fa-facebook"></i></a>
			<a href="#"><i class="fa fa-twitter"></i></a>
			<a href="#"><i class="fa fa-instagram"></i></a>
			<a href="#"><i class="fa fa-tumblr"></i></a>
		</div><!-- Footer Right End -->

		<div class="footer-left">
			<p class="footer-links">
				<a> <%= link_to 'Home', '/static_pages/index' %> </a>
				<a> <%= link_to 'Shop', '/static_pages/shop' %></a>
				<a> <%= link_to 'Orders', '/static_pages/orders' %></a>
				<a> <%= link_to 'Contact', '/static_pages/contact' %></a>
			</p>
			<p>Sahil Gadimbayli &copy; 2016</p>
		</div><!-- Footer Left End -->
		
	</footer>

</body>
</html>
