<div class="login_form">
  <header>Log in</header>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login_field">

      <div class="field">
        <%= f.label :email, "EMAIL", :class => 'login_input', :style => "background-color: #1695A3; color: #FFFFFF;" %><br />
        <%= f.email_field :email, autofocus: true, :class => 'login_input' %>
      </div>

      <div class="field">
        <%= f.label :password, "PASSWORD", :class => 'login_input', :style => "background-color: #1695A3; color: #FFFFFF; " %><br />
        <%= f.password_field :password, autocomplete: "off", :class => 'login_input' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", :class => 'login_button' %>
      </div>
      
      <div class="login_help">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  <% end %>

</div>