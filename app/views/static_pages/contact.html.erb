<div class="container-fluid" id="contact">
	
	<div class="row">
		
		<%= image_tag 'mail.png', :style => "margin-left: auto; margin-right:auto; display: block;" %>
		<%= flash[:notice] %>
		<%= form_tag("/static_pages/thank_you") do %>

		<div class="row">
		
			<div class="form-group col-md-6">
				<%= label_tag :name %>
				<%= text_field_tag :name, nil, :class => "form-control", placeholder: "Enter your name:", :required => true %>
			</div>
		
			<div class="form-group col-md-6 ">
				<%= label_tag :email, "Email address" %>
				<%= text_field_tag :email, nil, :class => "form-control", placeholder: "Enter your e-mail address:", :required => true %>
			</div>
		
			<div class="form-group col-md-12">
				<%= label_tag :message %>
				<%= text_area_tag :message, nil, :class => "form-control", placeholder: "Enter your message:", :rows => 5, :required => true %>
			</div>
		
		</div><!-- row ending form -->
	
		<div class="col-md-12">
			<%= submit_tag "Send", :class => "btn btn-success btn-send ", :type => "Submit" %>
		</div>

	</div><!-- row ending -->
	
	<% end %>

</div>
