<div class="row" style="margin-left:5px; margin-right:5px;">
  
  <h1>Product Information</h1>
  <div class="panel panel-primary filterable">
    
    <div class="panel-heading">

      <h2 class="panel-title">Product No: <%=@product.id%></h2>

    </div>
    
    <div class="table-responsive">
      <!-- Table columns -->
      <table class="table table-bordered table-hover">
        <thead>
          <tr class="filters" style="text-decoration: bold; font-size: 16px; border-bottom: solid; color: red;">
            <th >NAME</th>
            <th>DESCRIPTION</th>
            <th>IMAGE_URL</th>
            <th>NEW?</th>
            <th>PRICE</th>
            <th>COLOUR</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <!-- Table contents -->
        <tbody>
            <tr>
              <td><%= @product.name %></td>
              <td><%= @product.decription %></td>
              <td><%= @product.image_url %></td>

              <% if (@product.brand_new == true) %>
                <td style="color: green;"><%= "Yes" %></td>
              <% end %>
              
              <% if (@product.brand_new == false) %>
                <td style="color: red;"><%= "No" %></td>
              <% end %>
              
              <td><%= @product.price %></td>
              <td><%= @product.colour %></td>
              <!-- View Image -->
              <td><%= link_to 'View Image', image_path("#{@product.image_url}") %></td>

            </tr>
         
        </tbody>
      </table>
    </div>

  </div>

  <div class="product-nav">
    <!-- Link to product editing -->
    <%= link_to '', edit_product_path(@product), :class => 'glyphicon glyphicon-edit' %> |
    <!-- Back to Products Listings -->
    <%= link_to '', products_path, :class => 'glyphicon glyphicon-circle-arrow-left' %>
  </div>

</div>


